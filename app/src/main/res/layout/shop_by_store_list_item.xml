<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/White"
    android:animateLayoutChanges="false">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/shopImage"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/shopDetails1"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shopImage"
        android:paddingLeft="20dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/shopRatings"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/shopImage"
        android:layout_alignBottom="@+id/shopImage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store Name"
            android:id="@+id/textView"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:id="@+id/textView2"
            android:textColor="#ff696969"
            android:textSize="16sp"
            android:layout_gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:id="@+id/shopRatings"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="4.5"
            android:id="@+id/textView3"
            android:background="@drawable/rating_drawable_5"
            android:gravity="center"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 km"
            android:id="@+id/textView4"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</RelativeLayout>